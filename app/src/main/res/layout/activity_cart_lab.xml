<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backdoctor"
    tools:context=".CartLabActivity">

    <Button
        android:id="@+id/buttoncheckout"
        android:layout_width="138dp"
        android:layout_height="49dp"
        android:layout_marginBottom="500dp"
        android:background="@drawable/button_background"
        android:paddingStart="24dp"
        android:paddingTop="12dp"
        android:paddingEnd="24dp"
        android:paddingBottom="12dp"
        android:text="Satın Al"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/textViewtotalCost"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textViewtotalCost" />

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_arrow_back_24"
        android:padding="16dp"
        android:contentDescription="@string/back_button_description"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textViewpackcartname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Laboratuvar testleri"
        android:textColor="@color/purple_200"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.094" />

    <TextView
        android:id="@+id/textViewtotalCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="132dp"
        android:text="Toplam Tutar: "
        android:textColor="@color/purple_200"
        android:textSize="20dp"
        app:flow_horizontalBias="0.51"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextMultiLine3" />

    <EditText
        android:id="@+id/editTextTextMultiLine3"
        android:layout_width="268dp"
        android:layout_height="363dp"
        android:layout_marginTop="84dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:text="Merhaba!"
        android:textColor="@color/black"
        app:flow_firstHorizontalBias="0.495"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewpackcartname"
        app:layout_constraintVertical_bias="0.0" />


    <EditText
        android:id="@+id/editTextDate"
        android:layout_width="206dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:background="@drawable/edittext_background"
        android:ems="10"
        android:hint="Tarih Seçin"
        android:inputType="date"
        android:padding="16dp"
        android:textColorHighlight="#5c5f72"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.287"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewtotalCost" />

    <EditText
        android:id="@+id/editTextTime"
        android:layout_width="205dp"
        android:layout_height="47dp"
        android:layout_weight="1"
        android:background="@drawable/edittext_background"
        android:ems="10"
        android:hint="Saat Seçin"
        android:inputType="time"
        android:padding="16dp"
        android:textColorHighlight="#5c5f72"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.287"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextDate" />

    <Button
        android:id="@+id/buttonAppTime"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@drawable/login_btn_background"
        android:text="Seç"
        android:textColor="#ffffff"
        app:layout_constraintStart_toEndOf="@+id/editTextTime"
        tools:layout_editor_absoluteY="642dp" />

    <Button
        android:id="@+id/buttonAppDate"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@drawable/login_btn_background"
        android:text="Seç"
        android:textColor="#ffffff"
        app:layout_constraintStart_toEndOf="@+id/editTextDate"
        tools:layout_editor_absoluteY="592dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
